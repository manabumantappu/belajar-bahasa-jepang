<script>
/* Check quiz only when user clicks 'Cek Jawaban' */
function checkQuiz() {
  const cards = Array.from(document.querySelectorAll('.quiz-card'));
  let score = 0;

  cards.forEach(card => {
    const correct = card.dataset.answer;
    const selected = card.querySelector('input[type="radio"]:checked');
    const explain = card.querySelector('.explain');

    // reset previous classes
    card.querySelectorAll('label').forEach(l => l.classList.remove('correct','wrong'));

    // hide explanation initially
    if (explain) explain.style.display = 'none';

    if (!selected) {
      // no answer selected for this card -> leave it (no feedback)
      return;
    }

    if (selected.value === correct) {
      // mark the label containing the chosen radio as correct
      selected.parentElement.classList.add('correct');
      score++;
    } else {
      // mark chosen as wrong and also mark the correct option
      selected.parentElement.classList.add('wrong');
      const correctInput = card.querySelector(`input[value="${correct}"]`);
      if (correctInput) correctInput.parentElement.classList.add('correct');
    }

    // show explanation
    if (explain) explain.style.display = 'block';
  });

  document.getElementById('result').innerText = `Skor kamu: ${score} / ${cards.length}`;
  // optionally disable inputs after submit (uncomment if desired)
  // document.querySelectorAll('input[type="radio"]').forEach(i=>i.disabled=true);
}
</script>

