  <h1>Quiz 20 – FUKUSHU 2</h1>
  <div id="progress"></div>

  <div id="quiz">
    <div class="question" id="question"></div>
    <div class="choices" id="choices"></div>
    <button id="nextBtn" onclick="nextQuestion()">Soal Berikutnya</button>
  </div>

  <div id="result"></div>
</div>

<script>
/* =========================================
   QUIZ 20 – FUKUSHU 2 – HIRAGANA & KATAKANA RANDOM (40)
   ========================================= */
const quizData = [
  /* === HIRAGANA DASAR === */
  { q:"あ", a:"a", c:["a","i","u","e"] },
  { q:"き", a:"ki", c:["ki","ku","ke","ka"] },
  { q:"そ", a:"so", c:["so","sa","su","se"] },
  { q:"た", a:"ta", c:["ta","te","to","chi"] },
  { q:"ぬ", a:"nu", c:["nu","ne","no","mu"] },

  /* === KATAKANA DASAR === */
  { q:"ア", a:"a", c:["a","i","u","e"] },
  { q:"キ", a:"ki", c:["ki","ku","ke","ka"] },
  { q:"ソ", a:"so", c:["so","sa","su","se"] },
  { q:"タ", a:"ta", c:["ta","te","to","chi"] },
  { q:"ヌ", a:"nu", c:["nu","ne","no","mu"] },

  /* === DAKUON HIRAGANA === */
  { q:"が", a:"ga", c:["ga","ka","sa","ta"] },
  { q:"じ", a:"ji", c:["ji","shi","chi","gi"] },
  { q:"ず", a:"zu", c:["zu","su","tsu","ru"] },
  { q:"で", a:"de", c:["de","te","ze","re"] },
  { q:"ど", a:"do", c:["do","to","zo","ro"] },

  /* === DAKUON KATAKANA === */
  { q:"ガ", a:"ga", c:["ga","ka","sa","ta"] },
  { q:"ジ", a:"ji", c:["ji","shi","chi","gi"] },
  { q:"ズ", a:"zu", c:["zu","su","tsu","ru"] },
  { q:"デ", a:"de", c:["de","te","ze","re"] },
  { q:"ド", a:"do", c:["do","to","zo","ro"] },

  /* === HANDAKUON === */
  { q:"ぱ", a:"pa", c:["pa","ba","ha","ta"] },
  { q:"ぷ", a:"pu", c:["pu","bu","fu","tsu"] },
  { q:"ポ", a:"po", c:["po","bo","ho","to"] },

  /* === YOUON === */
  { q:"きゃ", a:"kya", c:["kya","kiya","kaya","ka"] },
  { q:"しゅ", a:"shu", c:["shu","syu","shuu","su"] },
  { q:"チョ", a:"cho", c:["cho","cyo","chiyo","to"] },
  { q:"ニュ", a:"nyu", c:["nyu","niyu","nuyu","nu"] },

  /* === CHOUON (Vokal Panjang) === */
  { q:"おばあさん", a:"obaasan", c:["obaasan","obasan","obaasan","obaa san"] },
  { q:"コーヒー", a:"koohii", c:["koohii","kohii","koohi","kohhi"] },

  /* === SOKUON (っ / ッ) === */
  { q:"がっこう", a:"gakkou", c:["gakkou","gakou","gakkō","gakkoo"] },
  { q:"きって", a:"kitte", c:["kitte","kite","kittei","kete"] },
  { q:"バッグ", a:"baggu", c:["baggu","bagu","bakku","bagg"] },
  { q:"サッカー", a:"sakkaa", c:["sakkaa","saka","sakkā","sakaa"] }
];

/* =====================
   QUIZ ENGINE (UMUM)
===================== */
let index = 0;
let score = 0;

const questionEl = document.getElementById("question");
const choicesEl = document.getElementById("choices");
const progressEl = document.getElementById("progress");
const nextBtn = document.getElementById("nextBtn");
const resultEl = document.getElementById("result");

function loadQuestion() {
  const q = quizData[index];
  questionEl.textContent = q.q;
  choicesEl.innerHTML = "";
  progressEl.textContent = `Soal ${index + 1} / ${quizData.length}`;
  nextBtn.style.display = "none";

  q.c.forEach(choice => {
    const btn = document.createElement("button");
    btn.textContent = choice;
    btn.onclick = () => checkAnswer(btn, choice, q.a);
    choicesEl.appendChild(btn);
  });
}

function checkAnswer(btn, selected, correct) {
  const buttons = document.querySelectorAll(".choices button");
  buttons.forEach(b => b.disabled = true);

  if (selected === correct) {
    btn.classList.add("correct");
    score++;
  } else {
    btn.classList.add("wrong");
    buttons.forEach(b => {
      if (b.textContent === correct) {
        b.classList.add("correct");
      }
    });
  }

  nextBtn.style.display = "block";
}

function nextQuestion() {
  index++;
  if (index < quizData.length) {
    loadQuestion();
  } else {
    showResult();
  }
}

function showResult() {
  document.getElementById("quiz").style.display = "none";
  resultEl.innerHTML = `Skor Akhir: ${score} / ${quizData.length}`;
}

loadQuestion();
</script>

</body>
